@model IEnumerable<MATJParking.Web.Models.VehicleType>
@{
    ViewBag.Title = "Home Page";
}





<div class="row">

    <h4>@ViewBag.Message</h4>
</div>
<div class="row">
    <div class="col-md-4">
        
            @using (Html.BeginForm())
{
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
          <div class="main">      
            <div class="form-group">
                <label for="user">Registration number :</label>
                <input type="text" class="form-control" id="number" name="registrationNumber" placeholder = "Add a number", required="required">
            </div>
        </div>
        <div class="pageButtons">
            <button type="submit" class="btn btn-success" formaction="~/Vehicle/CheckIn">Check in</button>
            <button type="submit" class="btn btn-primary" formaction="~/Vehicle/checkout">Check out</button>
            <button type="submit" class="btn btn-default" formaction="~/Vehicle/CarDetails">Search</button>
        </div>        }
    </div>
</div>
